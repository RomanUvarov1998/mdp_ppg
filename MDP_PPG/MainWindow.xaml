<Window x:Class="MDP_PPG.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MDP_PPG"
        xmlns:pv="clr-namespace:MDP_PPG.PagedViews"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" MinWidth="700" MinHeight="500"
        SizeChanged="Window_SizeChanged">
    
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <pv:UC_Patients Grid.Row="0"
                        Grid.Column="0"
                        x:Name="pvPatients"
                        Margin="3"/>

        <pv:UC_Recordings Grid.Row="1"
                          Grid.Column="0"
                          x:Name="pvRecordings"
                          Margin="3"/>

        <pv:UC_SignalDataViewer Grid.Row="0"
                                Grid.Column="1"
                                Grid.RowSpan="2"
                                x:Name="pvSignalPlot"
                                Margin="3"/>

    </Grid>
    
</Window>
