<UserControl x:Class="MDP_PPG.EntitiesEditing.UC_EditPatient"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MDP_PPG.EntitiesEditing"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>

        <StackPanel>
            <local:UC_ValidativeTextBox x:Name="vtbSurname" 
                                        FieldName="Фамилия"
                                        ErrMsgText="Только русские или латинские буквы."/>
            <local:UC_ValidativeTextBox x:Name="vtbName" 
                                        FieldName="Имя"
                                        ErrMsgText="Только русские или латинские буквы. Можно не указывать."/>
            <local:UC_ValidativeTextBox x:Name="vtbPatronymic" 
                                        FieldName="Отчество"
                                        ErrMsgText="Только русские или латинские буквы. Можно не указывать."/>
        </StackPanel>
    </Grid>
    
</UserControl>
